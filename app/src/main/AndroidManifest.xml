<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pc.anew" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="Home Automation"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".MainActivity" >

        </activity>
        <activity android:name=".Control">
            <intent-filter>
                <action android:name="com.example.pc.anew.CONTROL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name=".Status">

            <intent-filter>
                <action android:name="com.example.pc.anew.STATUS" />
               <!-- <category android:name="android.intent.category.DEFAULT" />-->
            </intent-filter>

        </activity>
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".SignUp">
            <intent-filter>
                <action android:name="android.intent.action.SIGNUP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name=".UserDetails">
            <intent-filter>
                <action android:name="android.intent.action.USERDETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name=".AddAppliance">
            <intent-filter>
                <action android:name="android.intent.action.ADDAPPLIANCE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name=".ManageAppliance">
            <intent-filter>
                <action android:name="android.intent.action.MANAGEAPPLIANCE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name=".btnas">
            <intent-filter>
                <action android:name="android.intent.action.BTNAS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>




    </application>

</manifest>