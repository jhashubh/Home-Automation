<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a">


    <EditText
        android:id="@+id/remove_aplliances"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Appliance Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/rem_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remove_aplliances"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@color/colorBtn"
        android:text="Remove Appliance"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="cursive"
        android:text="Remove Appliance"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rem_btn"
        android:layout_marginTop="32dp" />

</RelativeLayout>
